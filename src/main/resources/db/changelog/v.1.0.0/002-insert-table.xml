<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="insert_initial_users" author="zhenya">
        <insert tableName="users">
            <column name="id" valueNumeric="1"/>
            <column name="username" value="john_doe"/>
            <column name="fullname" value="John Doe"/>
            <column name="password" value="password123"/>
            <column name="date_of_birth" valueDate="1990-01-01"/>
            <column name="balance" valueNumeric="1000.00"/>
            <column name="initialBalance" valueNumeric="1000.00"/>
            <column name="ROLE_USER" value="user"/>
        </insert>
    </changeSet>

    <changeSet id="insert_initial_user_phones" author="zhenya">
        <insert tableName="user_phones">
            <column name="id" valueNumeric="1"/>
            <column name="user_id" valueNumeric="1"/>
            <column name="phone_number" value="1234567890"/>
        </insert>
    </changeSet>

    <changeSet id="insert_initial_user_emails" author="zhenya">
        <insert tableName="user_emails">
            <column name="id" valueNumeric="1"/>
            <column name="user_id" valueNumeric="1"/>
            <column name="email" value="john_doe@example.com"/>
        </insert>
    </changeSet>

</databaseChangeLog>
